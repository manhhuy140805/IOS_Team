<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="16dp" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="8dp" app:cardBackgroundColor="@color/white" app:strokeWidth="2dp" app:strokeColor="#E0E0E0">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

        <!-- Header: Logo, Name, Email, Status Badge -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">

            <!-- Organization Logo -->
            <com.google.android.material.imageview.ShapeableImageView android:id="@+id/ivOrgLogo" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_organization" android:scaleType="centerInside" app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle" android:background="@drawable/bg_white" android:backgroundTint="#E0F2F1" app:tint="@color/app_green_primary" android:padding="10dp"/>

            <!-- Name and Email -->
            <LinearLayout android:id="@+id/llOrgInfo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:orientation="vertical">

                <TextView android:id="@+id/tvOrgName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quỹ Từ Tâm Việt" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>

                <TextView android:id="@+id/tvOrgEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="contact@tumtam.org.vn" android:textSize="12sp" android:layout_marginTop="2dp" android:textColor="@color/text_secondary" android:ellipsize="end" android:maxLines="1"/>
            </LinearLayout>

            <!-- Status Badge -->
            <TextView android:id="@+id/tvOrgStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hoạt động" android:textSize="11sp" android:textStyle="bold" android:paddingHorizontal="10dp" android:paddingVertical="4dp" android:background="@drawable/bg_status_active_event" android:textColor="@color/app_green_primary"/>

        </LinearLayout>

        <!-- Divider -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginVertical="12dp"/>

        <!-- Organization Details -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

            <!-- Founded Date -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thành lập" android:textSize="11sp" android:textColor="@color/text_secondary"/>

                <TextView android:id="@+id/tvFoundedDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10/05/2020" android:textSize="13sp" android:textStyle="bold" android:textColor="@color/text_primary" android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Member Count -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thành viên" android:textSize="11sp" android:textColor="@color/text_secondary"/>

                <TextView android:id="@+id/tvMemberCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="145" android:textSize="13sp" android:textStyle="bold" android:textColor="@color/app_green_primary" android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Empty space for balance or future data -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>

        </LinearLayout>

        <!-- Violation Warning (if any) -->
        <LinearLayout android:id="@+id/llViolationWarning" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="@drawable/bg_category_tab_unselected_reward" android:backgroundTint="#FFEBEE" android:padding="8dp" android:visibility="gone">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="⚠️" android:textSize="12sp"/>

            <TextView android:id="@+id/tvViolationType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vi phạm: Nội dung không phù hợp" android:textSize="12sp" android:layout_marginStart="8dp" android:textColor="#C62828"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:orientation="horizontal" android:gravity="end">

            <ImageButton android:id="@+id/btnView" android:layout_width="40dp" android:layout_height="40dp" android:background="?attr/selectableItemBackgroundBorderless" android:src="@drawable/ic_info" app:tint="@color/text_secondary" android:padding="8dp" android:contentDescription="View Details"/>

            <ImageButton android:id="@+id/btnLockUnlock" android:layout_width="40dp" android:layout_height="40dp" android:background="?attr/selectableItemBackgroundBorderless" android:src="@drawable/ic_lock" app:tint="#FF9800" android:padding="8dp" android:layout_marginStart="8dp" android:contentDescription="Lock/Unlock"/>

            <ImageButton android:id="@+id/btnDelete" android:layout_width="40dp" android:layout_height="40dp" android:background="?attr/selectableItemBackgroundBorderless" android:src="@drawable/ic_delete" app:tint="#E53935" android:padding="8dp" android:layout_marginStart="8dp" android:contentDescription="Delete"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
