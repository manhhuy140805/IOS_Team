<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Activities.Fragment.SearchFragment">

    <!-- Header Section with Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_green_light"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <!-- Back Button & Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:scaleType="centerInside"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_results_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_green_primary" />

                <TextView
                    android:id="@+id/viewMoreFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opportunities_found"
                    android:textSize="12sp"
                    android:textColor="@color/app_green_primary"
                    android:alpha="0.85"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Search Bar with Filters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:spacing="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        app:tint="@android:color/darker_gray" />

                    <EditText
                        android:id="@+id/searchKeyword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/search_keyword_hint"
                        android:autofillHints="none"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@android:color/transparent"
                        android:textSize="13sp"
                        android:inputType="text"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <ImageView
                    android:id="@+id/filterButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_filter"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/app_name"
                    app:tint="@color/app_green_primary" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filter Panel -->
            <androidx.cardview.widget.CardView
                android:id="@+id/filterPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Filter Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_filter"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            app:tint="@android:color/holo_blue_dark"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/filters_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/clearFiltersBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_all"
                            android:textSize="11sp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Category Filter - RecyclerView Horizontal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/category_label"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="10dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/categoryFiltersRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:scrollbars="none"
                            android:clipToPadding="false"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <!-- Added CheckBoxes for category filters to match binding IDs used in SearchFragment.java -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/categoryEnvironment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Môi trường"
                                android:textSize="12sp" />

                            <CheckBox
                                android:id="@+id/categoryEducation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giáo dục"
                                android:textSize="12sp"
                                android:layout_marginStart="12dp" />

                            <CheckBox
                                android:id="@+id/categoryHealth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Y tế"
                                android:textSize="12sp"
                                android:layout_marginStart="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8E8E8"
                        android:layout_marginBottom="16dp" />

                    <!-- Date Range Filter -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/registration_deadline"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:spacing="8dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F5F5F5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_calendar"
                                        android:scaleType="centerInside"
                                        android:contentDescription="@string/app_name"
                                        app:tint="@android:color/darker_gray"
                                        android:layout_marginEnd="6dp" />

                                    <EditText
                                        android:id="@+id/startDate"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:hint="@string/from_hint"
                                        android:autofillHints="none"
                                        android:inputType="date"
                                        android:background="@android:color/transparent"
                                        android:textSize="12sp"
                                        android:textColorHint="@android:color/darker_gray"
                                        android:textColor="@android:color/black" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F5F5F5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_calendar"
                                        android:scaleType="centerInside"
                                        android:contentDescription="@string/app_name"
                                        app:tint="@android:color/darker_gray"
                                        android:layout_marginEnd="6dp" />

                                    <EditText
                                        android:id="@+id/endDate"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:hint="@string/to_hint"
                                        android:autofillHints="none"
                                        android:inputType="date"
                                        android:background="@android:color/transparent"
                                        android:textSize="12sp"
                                        android:textColorHint="@android:color/darker_gray"
                                        android:textColor="@android:color/black" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8E8E8"
                        android:layout_marginBottom="16dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:spacing="8dp">

                        <Button
                            android:id="@+id/resetFilterBtn"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            style="?android:attr/buttonBarButtonStyle"
                            android:text="@string/reset"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:backgroundTint="@android:color/white"
                            android:strokeColor="@android:color/holo_blue_dark"
                            android:strokeWidth="1" />

                        <Button
                            android:id="@+id/applyFilterBtn"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            style="?android:attr/buttonBarButtonStyle"
                            android:text="@string/apply_filters"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:backgroundTint="@android:color/holo_blue_dark" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Results Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/results_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/sortSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/sort_options" />

            </LinearLayout>

            <!-- Search Results RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchResultsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- No Results Message -->
            <LinearLayout
                android:id="@+id/noResultsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="24dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_search"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/app_name"
                    app:tint="@android:color/darker_gray"
                    android:alpha="0.3"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/noResultsMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_results"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_results_sub"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:alpha="0.7" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
