<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Avatar, Name, Email, Status Badge -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="2dp"/>

            <!-- Name and Email -->
            <LinearLayout
                android:id="@+id/llUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivUserAvatar"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyá»…n VÄƒn An"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="an.nguyen@email.com"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvUserStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Hoáº¡t Ä‘á»™ng"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_status_active"
                android:textColor="@color/green_primary"/>

        </RelativeLayout>

        <!-- User Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Join Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvJoinDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tham gia: 15/10/2024"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- Activity Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’š"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvActivityCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoáº¡t Ä‘á»™ng: 12"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Last Active & Violation Warning (if any) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- Last Active -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvLastActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá»: 48h"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- Violation Warning -->
            <LinearLayout
                android:id="@+id/llViolationWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvViolationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vi pháº¡m: Spam"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/orange"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- View Button -->
            <TextView
                android:id="@+id/btnView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Xem"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_button_view"
                android:textColor="@color/cyan"
                android:layout_marginEnd="8dp"/>

            <!-- Lock/Unlock Button -->
            <TextView
                android:id="@+id/btnLockUnlock"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="KhÃ³a"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_button_lock"
                android:textColor="@color/orange"
                android:layout_marginEnd="8dp"/>

            <!-- Delete Button -->
            <TextView
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="XÃ³a"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_button_delete"
                android:textColor="@color/pink"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
