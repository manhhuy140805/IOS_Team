<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    android:orientation="vertical">

    <!-- Green Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_header_green_rounded"
        android:paddingBottom="24dp"
        android:elevation="8dp"
        android:outlineProvider="background">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duyá»‡t BÃ i ÄÄƒng"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                app:tint="@color/white"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Filter Tabs (Acting as Stats/Filter) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tabAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Táº¥t cáº£ (24)"
                    android:textSize="14sp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/bg_button_white_solid"
                    android:textColor="@color/app_green_primary"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tabPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chá» duyá»‡t (8)"
                    android:textSize="14sp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/bg_category_tab_unselected_reward"
                    android:textColor="@color/app_green_primary"
                    android:layout_marginEnd="8dp"/>
                    <!-- Note: Using white tint for unselected tabs on green background to look like 'glass' or faded white -->

                <TextView
                    android:id="@+id/tabApproved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ÄÃ£ duyá»‡t (12)"
                    android:textSize="14sp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/bg_category_tab_unselected_reward"
                    android:textColor="@color/app_green_primary"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tabRejected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tá»« chá»‘i (4)"
                    android:textSize="14sp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/bg_category_tab_unselected_reward"
                    android:textColor="@color/app_green_primary"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="ðŸ” TÃ¬m kiáº¿m bÃ i Ä‘Äƒng..."
                    android:textSize="14sp"
                    android:textColorHint="@color/text_secondary"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/bg_search_bar"
                    android:drawablePadding="8dp"/>
            </LinearLayout>

            <!-- RecyclerView for Posts -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="24dp"
                tools:listitem="@layout/item_event_post"/>

            <!-- Load More Button -->
            <TextView
                android:id="@+id/btnLoadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Xem thÃªm bÃ i Ä‘Äƒng"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/app_green_primary"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
