<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background"
    tools:context=".AddEventActivity">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở về"
            android:textSize="14sp"
            android:textColor="@color/md_theme_light_primary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo Hoạt động tình nguyện"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm các thông tin để tạo 1 hoạt động"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp" />




            <!-- Section: Basic Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        android:tint="@color/md_theme_light_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin cơ bản"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Event Title Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiêu đề họạt động *"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="e.g. Beach Cleanup"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Description Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả *"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Mô tả hoạt động của bạn, những tình nguyện viên của bạn cân làm gì..."
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:gravity="top"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Section: Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tag"
                        android:tint="@color/md_theme_light_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại hình *"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Category Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn_category_community"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_selected"
                        app:backgroundTint="@null"
                        android:layout_marginEnd="4dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="Cộng đồng"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableTop="@drawable/ic_backpack"
                        android:drawableTint="@color/green_primary" />

                    <Button
                        android:id="@+id/btn_category_environment"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_edit_text"
                        app:backgroundTint="@null"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="Môi trường"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableTop="@drawable/ic_plant"
                        android:drawableTint="@color/text_primary" />

                    <Button
                        android:id="@+id/btn_category_education"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_edit_text"
                        app:backgroundTint="@null"
                        android:layout_marginStart="4dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="Giáo dục"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableTop="@drawable/ic_book"
                        android:drawableTint="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btn_category_health"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_edit_text"
                        app:backgroundTint="@null"
                        android:layout_marginEnd="4dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="Sức khỏe"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableTop="@drawable/ic_heart" />

                    <Button
                        android:id="@+id/btn_category_animal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_edit_text"
                        app:backgroundTint="@null"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="Động vật"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableTop="@drawable/ic_pizza"
                        android:drawableTint="@color/text_primary" />

                    <Button
                        android:id="@+id/btn_category_other"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_edit_text"
                        app:backgroundTint="@null"
                        android:layout_marginStart="4dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="Khác"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableTop="@drawable/ic_organization"
                        android:drawableTint="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Section: Event Image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ảnh hoạt động"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:id="@+id/uploadImageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_preview_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_download"
                            android:tint="@color/md_theme_light_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhấn vào đây để tải ảnh lên"
                            android:textSize="13sp"
                            android:textColor="@color/md_theme_light_primary"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tối đa. 2MB or 2048x2048"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <!-- Section: Date &amp; Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/md_theme_light_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date &amp; Time"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Event Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày hoạt động *"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etEventDate"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="mm/dd/yyyy"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:inputType="date"
                    android:layout_marginBottom="16dp" />

                <!-- Start Time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian bắt đầu *"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="HH:mm"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:inputType="time"
                    android:layout_marginBottom="16dp" />

                <!-- Duration -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời lượng (giờ) *"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etDuration"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="e.g. 3"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:inputType="number"
                    android:layout_marginBottom="16dp" />

                <!-- Registration Deadline -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn đăng ký"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etRegistrationDeadline"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="mm/dd/yyyy"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:inputType="date"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Section: Volunteers -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_people"
                        android:tint="@color/md_theme_light_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volunteers"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Number Needed -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng cần *"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etNumberNeeded"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="e.g. 20"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:inputType="number"
                    android:layout_marginBottom="16dp" />

                <!-- Age Requirement -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yêu cầu tuổi"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etAgeRequirement"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="e.g. 13+"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Requirements &amp; Skills -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requirements &amp; Skills"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etRequirements"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="List any requirements, skills, or things volunteers should bring (e.g. can swim, physical health, bike, hiking gloves, etc.)"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:gravity="top"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Section: Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        android:tint="@color/md_theme_light_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ *"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="e.g. The Beach, Ca Name"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- City -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành phố *"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="e.g. Ha Noi"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- District -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quận/Huyện"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="e.g. District 1"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Map Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vị trí trên bản đồ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_preview_box"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_location_pin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhấn vào để chọn vị trí trên bản đồ"
                            android:textSize="13sp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vị trí chính xác để tập hợp các tình nguyện viên"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Spacing before buttons -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:baselineAligned="false">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Hủy"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_input_box"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Tạo hoạt động"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_primary" />

    </LinearLayout>

</LinearLayout>