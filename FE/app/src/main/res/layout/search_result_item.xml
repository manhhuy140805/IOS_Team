<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/searchResultImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name" />

        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- Title -->
            <TextView
                android:id="@+id/searchResultTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opportunity Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Organization & Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_organization"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/searchResultOrganization"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Organization"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_location_pin"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/searchResultLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

            <!-- Categories/Tags -->
            <LinearLayout
                android:id="@+id/tagsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/searchResultDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brief description of the opportunity"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="10dp" />

            <!-- Footer: Deadline & Slots -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:layout_marginStart="-14dp"
                android:layout_marginEnd="-14dp"
                android:layout_marginBottom="-14dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingBottom="14dp"
                android:background="#F5F5F5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deadline"
                        android:textSize="10sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/searchResultDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dec 25"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@android:color/darker_gray"
                    android:alpha="0.2"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slots Left"
                        android:textSize="10sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/searchResultSlots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 slots"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
