                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:background="@drawable/bg_category_tab_unselected_reward"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Category Filter Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/chipEnvironment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_chip_selected_event"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:text="ðŸŒ¿ MÃ´i trÆ°á»ng"
                        android:textColor="@color/app_green_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/chipEducation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_chip_unselected_event"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:text="ðŸ“š GiÃ¡o dá»¥c"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/chipHealth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip_unselected_event"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:text="ðŸ¥ Y táº¿"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Events List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="24dp"
                tools:listitem="@layout/item_event_manager"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
