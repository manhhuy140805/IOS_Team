<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Xác thực OTP"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Icon -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_mail"
                app:tint="@color/app_green_primary" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nhập mã OTP"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Chúng tôi đã gửi mã xác thực đến"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="email@example.com"
                android:textColor="@color/app_green_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- OTP Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etOtp1"
                    style="@style/OTPEditText"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etOtp2"
                    style="@style/OTPEditText"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etOtp3"
                    style="@style/OTPEditText"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etOtp4"
                    style="@style/OTPEditText"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etOtp5"
                    style="@style/OTPEditText"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etOtp6"
                    style="@style/OTPEditText" />
            </LinearLayout>

            <!-- Timer -->
            <TextView
                android:id="@+id/tvResendTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Gửi lại sau 60s"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone" />

            <!-- Verify Button -->
            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_button_green_primary"
                android:text="Xác thực"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Resend Button -->
            <Button
                android:id="@+id/btnResend"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_button_outline"
                android:text="Gửi lại mã"
                android:textAllCaps="false"
                android:textColor="@color/app_green_primary"
                android:textSize="16sp" />

            <!-- Back to Login -->
            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="Đã nhớ mật khẩu? Quay lại đăng nhập"
                android:textColor="@color/app_green_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
