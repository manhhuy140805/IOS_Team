<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/md_theme_light_background" tools:context=".ui.Activities.Fragment.User.CertificateFragment">

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="24dp">

            <!-- Header Background -->
            <View android:id="@+id/headerBackground" android:layout_width="match_parent" android:layout_height="240dp" android:background="@drawable/bg_header_green_rounded" app:layout_constraintTop_toTopOf="parent" />

            <!-- Header Content -->
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/headerContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="16dp" android:paddingTop="50dp" app:layout_constraintTop_toTopOf="parent">

                <ImageView android:id="@+id/btnBack" android:layout_width="32dp" android:layout_height="32dp" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="Back" android:padding="4dp" android:src="@drawable/ic_back" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:tint="@color/white" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chứng nhận" android:textColor="@color/white" android:textSize="20sp" android:textStyle="bold" app:layout_constraintBottom_toBottomOf="@id/btnBack" app:layout_constraintEnd_toStartOf="@id/btnLink" app:layout_constraintStart_toEndOf="@id/btnBack" app:layout_constraintTop_toTopOf="@id/btnBack" />

                <ImageView android:id="@+id/btnLink" android:layout_width="32dp" android:layout_height="32dp" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="Link" android:padding="4dp" android:src="@drawable/ic_share_green" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:tint="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Success Card -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardSuccess" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="16dp" android:layout_marginTop="32dp" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:layout_constraintTop_toBottomOf="@id/headerContent" app:strokeColor="#E0E0E0" app:strokeWidth="2dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/bg_custom_edit_text" android:gravity="center" android:orientation="vertical" android:padding="32dp">

                    <ImageView android:layout_width="64dp" android:layout_height="64dp" android:background="@drawable/bg_rounded_lite" android:contentDescription="Success" android:padding="16dp" android:src="@drawable/ic_check" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Chúc mừng!" android:textColor="@color/app_green_primary" android:textSize="24sp" android:textStyle="bold" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Bạn đã hoàn thành xuất sắc sự kiện tình nguyện" android:textAlignment="center" android:textColor="@color/app_green_primary" android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Certificate Badge Card -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardBadge" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="16dp" android:layout_marginTop="16dp" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:layout_constraintTop_toBottomOf="@id/cardSuccess" app:strokeColor="#E0E0E0" app:strokeWidth="2dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/bg_category_tab_selected_reward" android:gravity="center" android:orientation="vertical" android:padding="32dp">

                    <ImageView android:layout_width="80dp" android:layout_height="80dp" android:background="@drawable/bg_avatar_circle" android:contentDescription="Certificate" android:padding="20dp" android:src="@drawable/ic_medal" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="CHỨNG NHẬN" android:textColor="@color/app_green_primary" android:textSize="28sp" android:textStyle="bold" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="TÌNH NGUYỆN VIÊN" android:textColor="@color/app_green_primary" android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Certificate Details Card -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardDetails" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="16dp" android:layout_marginTop="16dp" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:layout_constraintTop_toBottomOf="@id/cardBadge" app:strokeColor="#E0E0E0" app:strokeWidth="2dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Chứng nhận rằng" android:textColor="#666666" android:textSize="14sp" />

                    <TextView android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="8dp" android:text="Nguyễn Văn An" android:textColor="@android:color/black" android:textSize="24sp" android:textStyle="bold" />

                    <TextView android:id="@+id/tvDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="12dp" android:text="Đã tham gia và hoàn thành xuất sắc" android:textAlignment="center" android:textColor="#666666" android:textSize="14sp" />

                    <TextView android:id="@+id/tvEventName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="4dp" android:text="&quot;Beach Cleanup - Vung Tau&quot;" android:textAlignment="center" android:textColor="@android:color/black" android:textSize="14sp" android:textStyle="bold" />

                    <!-- Date -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:orientation="horizontal">

                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:contentDescription="Date" android:src="@drawable/ic_calendar" />

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="12dp" android:layout_weight="1" android:orientation="vertical">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ngày tham gia" android:textColor="#666666" android:textSize="12sp" />

                            <TextView android:id="@+id/tvDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="15/11/2025" android:textColor="@android:color/black" android:textSize="14sp" android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Duration -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:orientation="horizontal">

                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:contentDescription="Duration" android:src="@drawable/ic_clock" />

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="12dp" android:layout_weight="1" android:orientation="vertical">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thời gian đóng góp" android:textColor="#666666" android:textSize="12sp" />

                            <TextView android:id="@+id/tvDuration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="4 giờ" android:textColor="@android:color/black" android:textSize="14sp" android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:orientation="horizontal">

                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:contentDescription="Location" android:src="@drawable/ic_location" />

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="12dp" android:layout_weight="1" android:orientation="vertical">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Địa điểm" android:textColor="#666666" android:textSize="12sp" />

                            <TextView android:id="@+id/tvLocation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="Bãi Sau, Vũng Tàu" android:textColor="@android:color/black" android:textSize="14sp" android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Organization -->
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="20dp" android:background="#E0E0E0" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:gravity="center_vertical" android:orientation="horizontal">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tổ chức" android:textColor="#666666" android:textSize="12sp" />

                        <Space android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

                        <TextView android:id="@+id/tvOrganization" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Green Vietnam" android:textColor="@android:color/black" android:textSize="16sp" android:textStyle="bold" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:background="@drawable/bg_rounded_lite" android:paddingStart="8dp" android:paddingTop="2dp" android:paddingEnd="8dp" android:paddingBottom="2dp" android:text="GV" android:textColor="#00BFA5" android:textSize="12sp" android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Certificate Info -->
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="20dp" android:background="#E0E0E0" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:orientation="horizontal">

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mã chứng nhận:" android:textColor="#666666" android:textSize="12sp" />

                            <TextView android:id="@+id/tvCertificateCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="VC-2025-001234" android:textColor="@android:color/black" android:textSize="14sp" android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ngày cấp:" android:textColor="#666666" android:textSize="12sp" />

                            <TextView android:id="@+id/tvIssueDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="16/11/2025" android:textColor="@android:color/black" android:textSize="14sp" android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- QR Code Card -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardQr" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="16dp" android:layout_marginTop="16dp" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:layout_constraintTop_toBottomOf="@id/cardDetails" app:strokeColor="#E0E0E0" app:strokeWidth="2dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:padding="24dp">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hiển thị mã QR xác thực" android:textColor="#00BFA5" android:textSize="14sp" android:textStyle="bold" />

                    <ImageView android:id="@+id/ivQrCode" android:layout_width="200dp" android:layout_height="200dp" android:layout_marginTop="16dp" android:contentDescription="QR Code" android:src="@drawable/qr_code_placeholder" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Points Card -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardPoints" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="16dp" android:layout_marginTop="16dp" app:cardCornerRadius="16dp" app:cardElevation="8dp" app:layout_constraintTop_toBottomOf="@id/cardQr" app:strokeColor="#E0E0E0" app:strokeWidth="2dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/bg_rounded_orange" android:orientation="horizontal" android:padding="20dp">

                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:contentDescription="Points" />

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginStart="16dp" android:layout_weight="1" android:orientation="vertical">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Điểm tích nhận" android:textColor="@android:color/white" android:textSize="14sp" />

                        <TextView android:id="@+id/tvPoints" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="+200" android:textColor="@android:color/white" android:textSize="28sp" android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:orientation="vertical">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tổng điểm" android:textColor="@android:color/white" android:textSize="14sp" />

                        <TextView android:id="@+id/tvTotalPoints" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="4,285" android:textColor="@android:color/white" android:textSize="28sp" android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons and Footer -->
            <LinearLayout android:id="@+id/footerSection" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:orientation="vertical" android:paddingHorizontal="16dp" app:layout_constraintTop_toBottomOf="@id/cardPoints">

                <!-- Download PDF Button -->
                <androidx.appcompat.widget.AppCompatButton android:id="@+id/btnDownloadPdf" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginBottom="12dp" android:background="@drawable/bg_rounded_primary" android:drawableLeft="@drawable/ic_download" android:gravity="center" android:padding="10dp" android:text="Tải xuống PDF" android:textColor="@android:color/white" android:textSize="16sp" android:textStyle="bold" />

                <!-- Share Button -->
                <androidx.appcompat.widget.AppCompatButton android:id="@+id/btnShare" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginBottom="12dp" android:background="@drawable/bg_rounded_lite" android:drawableLeft="@drawable/ic_share_green" android:gravity="center" android:padding="10dp" android:text="Chia sẻ chứng nhận" android:textColor="#00BFA5" android:textSize="16sp" android:textStyle="bold" />

                <!-- Footer Text -->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="8dp" android:paddingBottom="16dp" android:text="Chứng nhận này có giá trị xác thực thông qua mã QR và có thể được\nxác minh tại volunconnect/verify" android:textAlignment="center" android:textColor="#999999" android:textSize="11sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
