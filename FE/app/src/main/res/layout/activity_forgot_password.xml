<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_light_green"
    tools:context=".ui.Activities.ForgotPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- Back Button -->
            <LinearLayout
                android:id="@+id/backButtonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    app:tint="@color/app_green_primary"
                    android:contentDescription="Back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trở về"
                    android:textColor="@color/app_green_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Main Card with Shadow -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:background="@drawable/bg_forgot_password_card"
                android:padding="32dp"
                app:layout_constraintTop_toBottomOf="@id/backButtonContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Icon Container with Shadow -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_icon_circle_shadow"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_lock"
                        app:tint="@android:color/white"
                        android:contentDescription="Lock Icon"/>
                </FrameLayout>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quên mật khẩu?"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"/>

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đừng lo lắng, chúng tôi sẽ giúp bạn"
                    android:textSize="15sp"
                    android:textColor="#6B7280"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="32dp"/>

                <!-- Info Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_info_card_shadow"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="28dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/app_green_primary"
                        android:contentDescription="Info Icon"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nhập email đã đăng ký, chúng tôi sẽ gửi liên kết đặt lại mật khẩu"
                        android:textSize="13sp"
                        android:textColor="#00B886"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>

                <!-- Email Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ Email"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Email Input with Shadow -->
                <EditText
                    android:id="@+id/edit_text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_field_shadow"
                    android:hint="your.email@example.com"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="12dp"
                    android:drawableTint="#00C997"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#9CA3AF"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginBottom="24dp"/>

                <!-- Send Button with Gradient and Shadow -->
                <Button
                    android:id="@+id/btn_send_reset_link"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_button_gradient_primary"
                    android:text="Gửi liên kết đặt lại"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:layout_marginBottom="20dp"/>

                <!-- Divider with Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E5E7EB"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hoặc"
                        android:textSize="13sp"
                        android:textColor="#9CA3AF"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E5E7EB"/>
                </LinearLayout>

                <!-- Remember Password Link -->
                <LinearLayout
                    android:id="@+id/btn_remember_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check"
                        app:tint="@color/app_green_primary"
                        android:contentDescription="Check Icon"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã nhớ mật khẩu? Đăng nhập"
                        android:textColor="@color/app_green_primary"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Decorative Elements -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:layout_constraintTop_toBottomOf="@id/backButtonContainer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="#CEFFED"
                    android:layout_marginEnd="8dp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="4dp"
                    android:background="#00C997"
                    android:layout_marginEnd="8dp"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="#CEFFED"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

