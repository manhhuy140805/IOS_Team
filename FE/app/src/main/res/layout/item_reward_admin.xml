<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="16dp" android:layout_marginBottom="12dp" app:cardBackgroundColor="@android:color/white" app:cardCornerRadius="12dp" app:cardElevation="8dp" app:strokeColor="#E0E0E0" app:strokeWidth="2dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp">

        <!-- Top Section: Image and Info -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

            <!-- Reward Image -->
            <androidx.cardview.widget.CardView android:layout_width="80dp" android:layout_height="80dp" app:cardBackgroundColor="#F5F5F5" app:cardCornerRadius="8dp" app:cardElevation="0dp">

                <ImageView android:id="@+id/ivRewardImage" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:src="@drawable/ic_gift" />
            </androidx.cardview.widget.CardView>

            <!-- Info -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="12dp" android:layout_weight="1" android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="horizontal">

                    <TextView android:id="@+id/tvRewardCategory" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="6dp" android:background="@drawable/bg_white" android:paddingHorizontal="6dp" android:paddingVertical="2dp" android:text="Voucher" android:textColor="@color/app_green_primary" android:textSize="10sp" />

                    <TextView android:id="@+id/tvStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hoạt động" android:textColor="#4CAF50" android:textSize="10sp" android:textStyle="bold" />

                </LinearLayout>

                <TextView android:id="@+id/tvRewardName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:ellipsize="end" android:maxLines="2" android:text="Voucher The Coffee House 50K" android:textColor="@color/text_primary" android:textSize="16sp" android:textStyle="bold" />

                <TextView android:id="@+id/tvRewardPoints" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="500 điểm" android:textColor="@color/app_green_primary" android:textSize="14sp" android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginVertical="12dp" android:background="#F0F0F0" />

        <!-- Bottom Section: Stats and Actions -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="horizontal">

            <!-- Stats -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">

                <TextView android:id="@+id/tvStock" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="12dp" android:text="Kho: 45" android:textColor="@color/text_secondary" android:textSize="12sp" />

                <TextView android:id="@+id/tvRedeemed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đã đổi: 123" android:textColor="@color/text_secondary" android:textSize="12sp" />

            </LinearLayout>

            <!-- Actions -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">

                <ImageButton android:id="@+id/btnEdit" android:layout_width="32dp" android:layout_height="32dp" android:background="?attr/selectableItemBackgroundBorderless" android:padding="6dp" android:src="@drawable/ic_edit" app:tint="@color/text_secondary" />

                <ImageButton android:id="@+id/btnPause" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginHorizontal="4dp" android:background="?attr/selectableItemBackgroundBorderless" android:padding="6dp" android:src="@drawable/ic_pause" app:tint="@color/text_secondary" />

                <ImageButton android:id="@+id/btnDelete" android:layout_width="32dp" android:layout_height="32dp" android:background="?attr/selectableItemBackgroundBorderless" android:padding="6dp" android:src="@drawable/ic_delete" app:tint="@color/button_red" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
