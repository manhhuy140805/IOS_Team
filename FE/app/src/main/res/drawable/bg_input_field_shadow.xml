<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer 3 -->
    <item
        android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="#18000000"/>
        </shape>
    </item>

    <!-- Shadow layer 2 -->
    <item
        android:top="3dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="#25000000"/>
        </shape>
    </item>

    <!-- Shadow layer 1 -->
    <item
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="#30000000"/>
        </shape>
    </item>

    <!-- Main input field -->
    <item
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="#F7FBF9"/>
            <stroke
                android:width="2.5dp"
                android:color="#00C997"/>
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="14dp"
                android:bottom="14dp"/>
        </shape>
    </item>
</layer-list>

