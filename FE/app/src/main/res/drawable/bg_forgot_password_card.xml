<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer 1 (deepest) -->
    <item
        android:left="0dp"
        android:top="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#18000000"/>
        </shape>
    </item>

    <!-- Shadow layer 2 -->
    <item
        android:left="0dp"
        android:top="6dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

    <!-- Shadow layer 3 (mid) -->
    <item
        android:left="0dp"
        android:top="4dp"
        android:right="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#28000000"/>
        </shape>
    </item>

    <!-- Shadow layer 4 (closest) -->
    <item
        android:left="0dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#30000000"/>
        </shape>
    </item>

    <!-- Main card -->
    <item
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="2.5dp"
                android:color="#00C997"/>
        </shape>
    </item>
</layer-list>

